root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4
# For consistency with black (Python reformatter)
max_line_length = 88

[*.{bash,zsh,sh}]
max_line_length = 80

[*.md]
max_line_length = off
# In Markdown a trailing double space is interpreted as <br>
trim_trailing_whitespace = false
